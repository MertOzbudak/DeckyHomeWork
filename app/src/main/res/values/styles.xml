<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor" >@color/white</item>
        <item name="android:background" >@drawable/rounded_shape</item>
        <item name="android:fontFamily" >@font/sfprodisplay</item>
        <item name="android:text" >@string/lets_start</item>
        <item name="android:textSize" >18dp</item>
    </style>

    <style name="close_button" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor" >@color/black</item>
        <item name="android:background" >@drawable/rounded_button</item>
        <item name="android:fontFamily" >@font/sfprodisplay</item>
        <item name="android:text" >X</item>
        <item name="android:textSize" >18dp</item>
    </style>

    <style name="title" parent="@style/Widget.AppCompat.TextView" >
        <item name="android:textColor" >@color/gray</item>
        <item name="android:fontFamily" >@font/sfprodisplay</item>
        <item name="android:text" >@string/kelime_test</item>
        <item name="android:textSize" >32sp</item>
        <item name="lineSpacing">0sp</item>
    </style>

    <style name="info" parent="@style/Widget.AppCompat.TextView" >
        <item name="android:textColor" >@color/gray</item>
        <item name="android:fontFamily" >@font/sfprodisplay</item>
        <item name="android:text" >@string/kelime_test_info</item>
        <item name="android:textSize" >18sp</item>
        <item name="lineSpacing">1sp</item>
        <item name="android:translationY">-0.26sp</item>
    </style>

    <style name="skip" parent="@style/Widget.AppCompat.TextView" >
        <item name="android:textColor" >@color/gray</item>
        <item name="android:fontFamily" >@font/sfprodisplay</item>
        <item name="android:text" >@string/skip</item>
        <item name="android:textSize" >18sp</item>
    </style>

    <style name="word" parent="@style/Widget.AppCompat.TextView" >
        <item name="android:textColor" >@color/gray</item>
        <item name="android:fontFamily" >@font/sfprodisplay</item>
        <item name="android:text" >@string/skip</item>
        <item name="android:textSize" >18sp</item>
    </style>

</resources>